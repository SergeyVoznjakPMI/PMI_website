<div class="row">
	<div class="col-md-9 sectioncontainer">
		<p style="margin-top: 1.2em;"><%= link_to 'Назад', events_path %></p>
		<div class="panel panel-primary">
			<div class="panel-heading">		
				<h5><b><%= @event_language.title %></b></h5>
			</div>
			<div class="panel-body">
				<table class="table-inner-text">
					<tr>
						<td>
							Дата/время начала:
						</td>
						<td>
							<%= @event.start_date.to_formatted_s(:rfc822) %>
						</td>
					</tr>
					<tr>
						<td>
							Дата/время окончания:
						</td>
						<td>
							<%= @event.end_date.to_formatted_s(:rfc822) %>
						</td>
					</tr>
					<tr>
						<td>
							Продолжительность (час.):
						</td>
						<td>
							<%= number_with_precision(@event.duration, :precision => 1) %>
						</td>
					</tr>
				</table>
				<br>
				<span><%= @event_language.body.to_s.html_safe %></span>
				<table width="100%">
					<tr>
						<td>
							<span style="color: lightgray"><i><%= @event.created_at.strftime("%d/%m/%Y") %>, <%= @event_language.author %></i></span>
		        		</td>
		    		</tr>
		    	</table>
		   </div>
	    </div>
	    
