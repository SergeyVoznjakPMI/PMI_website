<table class='table-admin'>
	<tr>
		<%= link_to new_volunteer_path do %>
		<i class="btn btn-info">Добавить страницу "Волонтерство в PMI Ukraine Chapter"</i>
		<% end %> 
		<br><br>
	</tr>
	<tr>
		<th>Заголовок страницы</th>
		<th>Язык</th>
		<th>Дата создания</th>
		<th>Дата последнего обновления</th>
		<th></th>
	</tr>
	<% @volunteers.order('id DESC').each do |volunteer| %>
	<tr>
		<td>		
			<p><%= volunteer.title %></p>
   		</td>
		<td>			
			<p><%= volunteer.lang_id %></p>
   		</td>
		<td>			
			<p><%= volunteer.created_at.localtime.to_formatted_s(:db) %></p>
   		</td>
		<td>			
			<p><%= volunteer.updated_at.localtime.to_formatted_s(:db) %></p>
   		</td>
		<td class="admintable_column_operations">
			<div> 
				<%= link_to volunteer, :target => '_blank' do %>
					<i class="fa fa-file-text fa-lg icon btn btn-info operation_buttons"></i>		
				<% end %>
	   			<%= link_to edit_volunteer_path(volunteer) do %>
					<i class="fa fa-pencil fa-lg icon btn btn-info operation_buttons"></i> 
	   			<% end %>
	   			<%= link_to volunteer, method: :delete, data: { confirm: 'Пожалуйста, подтвердите удаление страницы "Волонтерство в PMI Ukraine Chapter"' }  do %>
					<i class="fa fa-trash fa-lg icon btn btn-danger operation_buttons"></i> 
	   			<% end %>
	   		</div>
		</td>
	</tr>
	<% end %>
</table>